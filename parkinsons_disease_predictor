import random
from sklearn.neighbors import KNeighborsClassifier


X = []
y = []

#Generating 150 symptom values
for _ in range(150):
    tremor = random.randint(0, 2)
    slowness = random.randint(0, 2)
    stiffness = random.randint(0, 2)
    voice_change = random.randint(0, 2)
    balance_issue = random.randint(0, 2)

# labeling
    score = 0

    if tremor == 2: score += 1
    if slowness == 2: score += 1
    if stiffness == 2: score += 1
    if voice_change == 2: score += 1
    if balance_issue == 2: score += 1

# If 2 or more high severity symptoms, then the disease is present
    label = 1 if score >= 2 else 0

    X.append([tremor, slowness, stiffness, voice_change, balance_issue])
    y.append(label)



model = KNeighborsClassifier(n_neighbors=5)
model.fit(X, y)


print("Parkinson's Disease Predictor ")
print("Enter symptom severity as: 0 = None, 1 = Mild, 2 = High")

tremor = int(input("Tremors: "))
slowness = int(input("Slowness of movement: "))
stiffness = int(input("Muscle stiffness: "))
voice_change = int(input("Voice change: "))
balance_issue = int(input("Balance issues: "))


user_data = [[tremor, slowness, stiffness, voice_change, balance_issue]]
prediction = model.predict(user_data)


if prediction[0] == 1:
    print("Possible early signs of Parkinson's detected.")
else:
    print("Low risk of Parkinson's symptoms.")